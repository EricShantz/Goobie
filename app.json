{
  "expo": {
    "name": "Goobie",
    "slug": "Goobie",
    "version": "1.0.2",
    "orientation": "portrait",
    "icon": "./assets/goobieIcon.png",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier":"com.GoobieGames.Goobie",
      "infoPlist": {
        "NSMicrophoneUsageDescription": "Want to access your microphone because...",
        "NSPhotoLibraryUsageDescription": "Want to access your photo library because...",
        "NSCameraUsageDescription": "Want to use your camera because..."
      }
    },
    "android": {
      "versionCode": 3,
      "package": "com.GoobieGames.Goobie",
      "adaptiveIcon": {
        "foregroundImage": "./assets/goobieIcon.png",
        "backgroundColor": "#FFFFFF"
      },
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE"
      ]
    },

    "plugins": [
      [
        "expo-image-picker",
        {
          "photosPermission": "The app accesses your photos to let you share them with your friends.",
          "cameraPermission": "Please iOS let me access the camera."
        }
      ]
    ],
    "web": {
      "favicon": "./assets/favicon.png"
    }
}
}
